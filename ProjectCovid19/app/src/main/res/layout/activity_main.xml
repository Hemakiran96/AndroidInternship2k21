<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Covid-19"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country"
            android:hint="Enter Country"
            android:textColor="@color/black"

            android:layout_weight="4"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="search"
            android:src="@drawable/ic_search" />

    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="156dp"
            android:layout_height="116dp"
            android:layout_marginLeft="20dp"
            android:onClick="india"
            app:srcCompat="@drawable/india1" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="172dp"
            android:layout_height="112dp"
            android:onClick="england"

            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/endland" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="158dp"
            android:layout_height="106dp"
            android:layout_marginTop="10dp"
            android:onClick="japan"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/japan1" />

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="105dp"
            android:layout_marginLeft="40dp"
            android:onClick="nepal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/nepal" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="165dp"
            android:layout_height="94dp"
            android:layout_marginLeft="20dp"
            android:onClick="usa"

            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/usa" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="172dp"
            android:layout_height="93dp"
            android:layout_marginLeft="40dp"
            android:onClick="uk"

            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/uk" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="166dp"
            android:layout_height="98dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:onClick="china"
            app:srcCompat="@drawable/china" />

        <ImageButton
            android:id="@+id/imageButton2"

            android:layout_width="185dp"
            android:layout_height="98dp"
            android:layout_marginLeft="20dp"
            android:onClick="pk"

            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/pk" />
    </TableRow>

    <TextView
        android:layout_width="176dp"
        android:layout_height="27dp"
        android:text=":Click On The Flag"
        android:textSize="20dp"
        android:textStyle="italic"
        />
</LinearLayout>